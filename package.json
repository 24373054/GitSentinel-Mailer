{
  "name": "github-monitor-system",
  "version": "1.0.0",
  "description": "GitHub变更邮箱提示系统",
  "main": "server/index.js",
  "scripts": {
    "server": "node server/index.js",
    "client": "cd client && set NODE_OPTIONS=--openssl-legacy-provider && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "cd client && set NODE_OPTIONS=--openssl-legacy-provider && npm run build",
    "start": "node server/index.js"
  },
  "keywords": ["github", "monitor", "email", "notification"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "axios": "^1.6.0",
    "nodemailer": "^6.9.7",
    "dotenv": "^16.3.1",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
